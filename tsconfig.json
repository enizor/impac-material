{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["reflect-metadata"],
    "lib": [
      "es2016",
      "dom"
    ],
    "paths": {
      "lib": [ "dist/" ]
    }
  },
  "exclude": [
    ".ng_build",
    "node_modules",
    "dist"
  ],
  "include": [
    "node_modules/@types"
  ]
}
